{
  "name": "edupath-app",
  "version": "1.0.0",
  "private": true,
  "description": "Edu Path - Career guidance platform for students",
  "scripts": {
    "dev": "concurrently -n \"BACK,FRONT\" -c \"blue,green\" \"npm run dev:back\" \"npm run dev:front\"",
    "dev:back": "cd packages/backend && npm run dev",
    "dev:front": "cd packages/frontend && npm run dev",
    "install:back": "cd packages/backend && npm install",
    "install:front": "cd packages/frontend && npm install",
    "install:all": "npm install && npm run install:back && npm run install:front",
    "build:back": "cd packages/backend && npm run build",
    "build:front": "cd packages/frontend && npm run build",
    "build": "npm run build:back && npm run build:front",
    "clean": "rm -rf node_modules packages/backend/node_modules packages/frontend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
